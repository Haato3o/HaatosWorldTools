<Window x:Class="HaatosWorldTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Haato's World Tools" Height="450" Width="800">
    <Grid>
        <Menu HorizontalAlignment="Stretch" Height="20" VerticalAlignment="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open">
                    <MenuItem Header="ItemsData" Click="OnOpenItemsDataClick"/>
                </MenuItem>
                <MenuItem Header="Export as...">
                    <MenuItem Header="CSV"/>
                    <MenuItem Header="XML"/>
                    <MenuItem Header="JSON"/>
                </MenuItem>
            </MenuItem>
        </Menu>
        <DataGrid x:Name="DisplayData" HorizontalAlignment="Stretch" Margin="0,20,0,0" VerticalAlignment="Stretch"/>
    </Grid>
</Window>
